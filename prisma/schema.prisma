generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Especie {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  especie   String
  municipio String
  ciudadano String
  latitud   Float
  longitud  Float
  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  @@unique([latitud, longitud])
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  userType   UserType
  groupName  String?
  groupAdmin String?
  especies   Especie[]
}

enum UserType {
  NORMAL
  GROUP
  COMMUNITY
}